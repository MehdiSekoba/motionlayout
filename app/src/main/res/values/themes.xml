<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Motionlayout" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Motionlayout" parent="Base.Theme.Motionlayout">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="Q">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <!--Rounded ImageView-->
    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <style name="CircleRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--TextSize||fontBold-->
    <style name="TextAppearance_Bold">
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="fontFamily">fonts/Vazirmatn_Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--TextSize||fontMedium-->
    <style name="TextAppearance_medium">
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="fontFamily">fonts/Vazirmatn_Medium.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
